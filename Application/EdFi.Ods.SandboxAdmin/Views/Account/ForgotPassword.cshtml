@model dynamic

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Forgot Password</h2>

<p>If you have lost access to your account, submit your email address and we will send you a link to reset your password</p>
<div class="row">
    <div class="col-sm-8">
        <form method="POST" action="@Url.Action("ForgotPassword", "Account")">
            <div class="form-group">
                <label for="email" class="control-label">Email Address:</label>
                <input type="email" name="email" class="form-control" id="input-forgot-password-email"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" id="btn-forgot-password-reset">Reset Password</button>
            </div>
        </form>
    </div>
</div>