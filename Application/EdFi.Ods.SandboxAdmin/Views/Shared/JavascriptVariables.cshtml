@using EdFi.Ods.Sandbox.Admin.Extensions
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var homeUrl = Context.Request.ToAbsolutePath();
    var oauthUrl = Configuration.GetValue<string>("OAuthUrl");
}

<script>
    var EdFiAdmin = EdFiAdmin || {};
    var urls = EdFiAdmin.Urls = EdFiAdmin.Urls || {};

    urls.createLogin = '@Url.Action("Create", "Account")';
    urls.home = '@homeUrl';
    urls.oauth = '@oauthUrl';
    urls.removeOrphans = '@Url.Action("RemoveOrphans", "Sandbox")';

</script>